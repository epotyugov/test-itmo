{% extends 'base.html.twig' %}
{% block content %}
	<h1>Список авторов</h1>
	<a href='/author' class='btn btn-success'>Создать</a>
	<ul>
		{% for author in paginator.items %}
			<li>
				{{author.name}} {{author.patronym}} {{author.surname}}
				(<a href="/author?id={{ author.id }}">страница</a>)
				<a href='{{ path('remove_author', { 'id': author.id}) }}' class='text-danger'>удалить</a>
			</li>
		{% endfor %}
	</li>
	{% include 'common/_paginator.html.twig' %}
{% endblock %}